<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/task_area_bg"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/main_orange"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <ImageView
                android:id="@+id/back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/title"
                style="@style/title"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="任务详情"/>
        </FrameLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:gravity="left|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/miss_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="任务详情"
            android:textColor="#ffffff"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/task_panel_bg"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/miss_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="家长布置任务"
                android:textColor="#F8B921"
                android:textSize="14dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wish_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="相关心愿:"
                android:textColor="#cccccc"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/wish_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:text="心愿详情"
                android:textColor="#cccccc"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/wish_detail_bg"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/wish_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_margin="10dp"
                android:text="家长布置任务"
                android:textColor="#E16932"
                android:textSize="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fanhui"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:background="@drawable/bt_start_finish"
                android:gravity="center"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/start"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/bt_start_finish"
                android:gravity="center"
                android:text="开始练习"
                android:textColor="#ffffff"
                android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

