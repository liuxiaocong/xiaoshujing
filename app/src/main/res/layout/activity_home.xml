<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_page"
    tools:context=".ui.home.HomeActivity">

    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="14dp">

        <ImageView
            android:id="@+id/email"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_email"/>

        <TextView
            android:id="@+id/email_count"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:visibility="gone"
            android:layout_gravity="right"
            android:background="@drawable/email_count_bg"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="8dp"/>
    </FrameLayout>

    <TextView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="14dp"
        android:id="@+id/welcome"
        android:gravity="left|center_vertical"
        android:layout_width="wrap_content"
        android:text="欢迎宝宝"
        android:textSize="16dp"
        android:textColor="#008858"
        android:layout_height="32dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:layout_marginTop="14dp"
        android:gravity="center">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_energy_home"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="28dp"
            android:gravity="center">
            <TextView
                android:id="@+id/credit"
                android:textStyle="bold"
                android:text=""
                android:textSize="14dp"
                android:textColor="#119D48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!--<ImageView-->
                <!--android:layout_width="21dp"-->
                <!--android:layout_height="14dp"-->
                <!--android:src="@drawable/ic_number_energy"/>-->
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/start"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="108dp"
        android:src="@drawable/btn_start"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_study"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bt_study_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_study_area"/>
                </LinearLayout>

                <TextView
                    style="@style/t1"
                    android:layout_marginTop="5dp"
                    android:text="学习专区"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_fun"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bt_fun_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_play_area"/>
                </LinearLayout>

                <TextView
                    style="@style/t1"
                    android:layout_marginTop="5dp"
                    android:text="娱乐专区"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_score"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bt_score_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_score"/>
                </LinearLayout>

                <TextView
                    style="@style/t1"
                    android:layout_marginTop="7dp"
                    android:text="评分"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_record_wrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_record"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bt_record_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_study_history"/>
                </LinearLayout>

                <TextView
                    style="@style/t1"
                    android:layout_marginTop="7dp"
                    android:text="学习记录"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_task"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bt_task_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_task_center"/>
                </LinearLayout>

                <TextView
                    style="@style/t1"
                    android:layout_marginTop="7dp"
                    android:text="任务中心"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
